<%= form_with(model: beer) do |form| %>
  <% if beer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
        <% beer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name,class: "form-control", placeholder: "Crisp Midsummer" %>
  </div>

  <div class="mb-2">
    <%= form.label :style_id, class: "form-label" %>
    <%= form.select :style_id, @styles.collect { |style| [style.name, style.id] }, {class: "form-control" } %>
  </div class="mb-2">

  <div class="mb-2">
    <%= form.label :brewery_id, class: "form-label" %>
    <%= form.select :brewery_id, @breweries.collect { |brewery| [brewery.name, brewery.id] }, { class: "form-control" } %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
