<div id="<%= dom_id @style %>">
  <p>
    <strong>Name:</strong>
    <%= @style.name %>
  </p>

  <quote>
    <%= @style.description %>
  </quote>
  <p></p>
  <% unless @style.beers.empty? %>
    <strong> Beers:</strong>
    <ul>
        <% @style.beers.each do |beer| %>
            <li><%= beer.name %></li>
        <% end %>
    </ul>
  <% end %>

  <%= edit_and_destroy_buttons(@style) %>
  <%= link_to "Back to styles", styles_path %>

</div>