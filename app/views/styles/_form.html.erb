<%= form_with(model: style) do |form| %>
  <% if style.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(style.errors.count, "error") %> prohibited this style from being saved:</h2>

      <ul>
        <% style.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Name of the style" %>
  </div>

  <div class="mb-2">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Short description of the style" %>
  </div>

  <div>
    <%= form.submit class:'btn btn-primary btn-sm' %>
  </div>
 <% end %>