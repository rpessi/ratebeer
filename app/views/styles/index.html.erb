<h2>List of styles</h2>
<%= "Number of beer styles: #{@styles.count}" %>

<div id="styles">
  <ul>
    <% @styles.each do |style| %>
      <li> <%= link_to style, style %> </li>
    <% end %>
  </ul>
</div>

<%= link_to("Create new style", new_style_path(@style), class:'btn btn-primary') if current_user %>
