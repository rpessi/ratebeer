<h2>Styles</h2>

<div id="styles">
  <p><%= "Number of beer styles: #{@styles.count}" %></p>

  <%= turbo_frame_tag "styles" do %>
    <% @styles.each do |style| %>
      <%= link_to style.name, style, data: { turbo_frame: "style_details" } %></th>
    <% end %>
  <% end %>

  <%= turbo_frame_tag "style_details" do %>
  <% end %>  
</div>
