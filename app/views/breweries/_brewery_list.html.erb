<%= turbo_frame_tag status do %>
  <div>
    <%= render "breweries/brewery_count", status: status %>
    <table class="table table-striped table-hover">
			<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Established</th>
				<th scope="col">Beers</th>
				<th scope="col">Rating</th>
        <% if current_user %>
          <th scope="col">Change activity</th>
        <% end %>
        <% if current_user&.admin? %>
				  <th scope="col">Action</th>
        <% end %>
			</tr>
			</thead>
			<tbody id="<%= status %>_brewery_rows">
				<% breweries.each do |brewery| %>
					<%= render "breweries/brewery_row", brewery: brewery %>
				<% end %>
			</tbody>
    </table>
  </div>
<% end %>
