<!DOCTYPE html>
<html>
  <head>
    <title>Ratebeer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag "Homer_beer.ico" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= Sentry.get_trace_propagation_meta.html_safe %>
  </head>

  <body>
    <div class="navibar">
      <%= link_to 'Breweries', breweries_path %>
      <%= link_to 'Beers', beers_path %>
      <%= link_to 'Ratings', ratings_path%>
      <%= link_to 'Users', users_path%>
      <%= link_to 'Beer clubs', beer_clubs_path%>
      <%= link_to 'Search beer places', places_path%>
      <% if current_user %>
        <%= link_to current_user.username, current_user %>
        <%= link_to 'Rate a new beer', new_rating_path %>
        <%= link_to 'Join a club', new_membership_path%>
        <%= link_to 'Sign out', signout_path, data: {"turbo-method": :delete} %>
      <% else %>
        <%= link_to 'Sign up', signup_path %>
        <%= link_to 'Sign in', signin_path %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
