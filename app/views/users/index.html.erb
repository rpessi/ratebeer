<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <p>
      <%= link_to(user.username, user) %>
      <p>Has made <%= "#{user.ratings.size}"%> ratings, average rating <%= "#{user.average_rating}" %></p>
      <% if user.blocked? && current_user&.admin? %>
        <span class="badge bg-primary">Account closed</span>
      <% end %>
    </p>
  <% end %>
</div>

<%= link_to("Create new user", new_user_path, class:'btn btn-primary') %>
